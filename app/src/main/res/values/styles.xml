<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="defaultTextColor">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="NumberBtn" parent="defaultTextColor">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textSize">38sp</item>
        <item name="android:background">@drawable/number_button</item>
    </style>

    <style name="DeleteBtn" parent="defaultTextColor">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
    </style>

    <style name="OperBtn" parent="defaultTextColor">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <!--<item name="android:background">@drawable/oper_button</item>-->
    </style>

    <style name="HexNumBtn" parent="NumberBtn">
        <item name="android:textSize">26sp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/number_button</item>
    </style>

    <style name="HexTypeBtn" parent="HexNumBtn">
        <item name="android:background">@drawable/type_button</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="HexOperBtn" parent="OperBtn">
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
